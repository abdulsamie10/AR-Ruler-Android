<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:src="@drawable/cameradialogue" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:fontFamily="@font/poppinsbold"
        android:text="Camera permission required for\nAR Ruler"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/splashScreenGrayClr"
        android:fontFamily="@font/poppinsregular"
        android:text="Please allow camera permission to enable the\nAR Ruler Measure"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/splashScreenGrayClr"
        android:fontFamily="@font/poppinsregular"
        android:text="Donâ€™t remind me again"
        android:textColor="@color/splashScreenGrayClr"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_no"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/no_button"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Cancel" />

        <TextView
            android:id="@+id/dialog_yes"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/yes_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="10dp"
            android:text="Allow" />

    </LinearLayout>

</LinearLayout>