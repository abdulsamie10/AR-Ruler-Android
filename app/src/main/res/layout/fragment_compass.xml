<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CompassFragment"
    android:background="@color/windowsBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity"
        android:theme="@style/Base.Theme.ARRulerAbdulSamie">

        <ImageView
            android:id="@+id/compassNeedle"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_gravity="center"
            android:src="@drawable/needle" />

        <TextView
            android:id="@+id/directionTextView"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:textSize="@dimen/_18sdp"
            android:gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/btn_title_settings_color"
            android:text="Direction: " />

    </LinearLayout>

</FrameLayout>