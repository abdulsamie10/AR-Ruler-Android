<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_4sdp"
        android:src="@drawable/exitdialogueicon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:gravity="center"
        android:text="Are you sure want to exit?"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_no"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/exitbuttons"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/exitbuttontextclr"
            android:text="No" />

        <TextView
            android:id="@+id/dialog_yes"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/exitbuttons"
            android:gravity="center"
            android:textColor="@color/exitbuttontextclr"
            android:padding="10dp"
            android:text="Yes" />

    </LinearLayout>

</LinearLayout>